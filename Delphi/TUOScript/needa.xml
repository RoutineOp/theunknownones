<?xml version="1.0" encoding="utf-8" ?>

<codetemplate xmlns="http://schemas.borland.com/Delphi/2005/codetemplates" version="1.0.0">
	<template name="needa" invoke="manual">
		<point name="ComponentClass">
			<text>
				ComponentClass
			</text>
			<hint>
				Enter the classname of the new component
			</hint>
		</point>
		<description>
			Inserts a component onto the current form
		</description>
		<author>
			www.theunknownones.net
		</author>
		<script language="TUOScript" onenter="false" onleave="true">
      Version=1,0
			InsertComponent(|ComponentClass|)
		</script>
		<code language="Delphi" context="methodbody" delimiter="|">
			<![CDATA[|ComponentClass|]]>
		</code>
	</template>
</codetemplate>

